@using (Html.BeginForm("Change", "Change", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
      @Html.AntiForgeryToken()
    <div class="container">
        <div class="box13" style="margin-top:-10px;">
            <div class="col-md-8 top-style">
                <div class="box15">
                    <div class="col-sm-12">
                        <form class="form-horizontal">

  
    <h3 align="center" style="color:darkgreen;" class="reg-style">Please fill the form below</h3>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="OldFullName">Former Full Name<em style="color:red">*</em></label>
                                    @Html.TextBoxFor(m => m.OldFullName, new { @id = "oldsurname", @class = "form-control", @required = "", @placeholder = "Former Full Name" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="NewFullName">New Full Name<em style="color:red">*</em></label>
                                    @Html.TextBoxFor(m => m.NewFullName, new { @id = "newSurname", @class = "form-control", @required = "", @placeholder = "New Full Name" })
                                </div>
                            </div>

                            <hr />


                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="" for="Phone">Phone Number<em style="color:red">*</em></label>
                                    @Html.TextBoxFor(m => m.Phone, new { @required = "", @class = "form-control", Type = "tel", Pattern = "[0-9]{11}", @placeholder = "(e.g) +2347030000000" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="" for="Email">E-mail<em style="color:red">*</em></label>
                                    @Html.TextBoxFor(m => m.Email, new { @required = "", @class = "form-control", Type = "email", @placeholder = "E-mail" })
                                </div>
                            </div>

                            <hr class="colorgraph">


                            <div class="col-md-12 top-style">
                                <div class="form-group">
                                    <label for="ResidentialAddress">Residential Address<em style="color:red">*</em></label>
                                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @required = "", @placeholder = "Residential Address" })
                                </div>
                            </div>

                            <hr />

                            <div class="">
                                @Html.HiddenFor(m => m.SessionKey, new { @class = "", @style = "width:100%;" })
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                               
                                    <div>
                                        @*<span style=" color:red">Upload any Official Means of Identification*</span>*@
                                        <input class="btn btn-primary" style="width:100%;" type="file" name="IdentityFile" required/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div>
                                        @*<span style=" color:red"> Upload your Marriage Certificate or Sworn Affidavit*</span>*@
                                        <input class="btn btn-primary" style="width:100%;" type="file" name="uploadedFile" required  />
                                    </div>
                                </div>
                            </div>

                            <hr class="colorgraph">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.DropDownListFor(x => x.DayId, Model.Day, "Specify Day", new { @id = "dropdownid1", @class = "form-control", @required = "" })
                                </div>
                            </div>

                            <hr class="colorgraph">

                            <div class="col-md-12">
                                <div class="form-group">
                                    <input style="width: 100%; background:darkgreen; color:white;" type="submit" value="Make Payment" class="btn btn-success btn-block" />
                                </div>
                         </div>

                        </form>
                    </div>
                </div>
            </div>

           
            <div class="col-md-4">
                <div class="box14">
                    <div class="well">
                        
                        <div id="t1">
                            <h5 align="center">NOTICE!  NOTICE!!  NOTICE!!!</h5>
                            Change of Name <br />
                            <p style="line-height: 2em;" align="justify">
                                I hereby wish to inform the general public that my name has been changed
                                from <span style="color:red" id="surname">{Old Name}</span>

                                to <span style="color:red" id="newsurname">{New Name}</span>.

                                <br />All relevant documents still remains thesame forthwith. Please take note.
                            </p>
                                <p align="center"><em>Thank you all.</em></p>
                            
                        </div>

                        <center>
                            <div><img id="okay" src="~/images/@ViewBag.Image" /></div>
                            
                        </center>

                    </div>

                    <div style="box-shadow:none;" class="box22" id="amountPanel">
                        <h4 style="font-size:15px; text-align:center; color:white;">Transaction Details</h4>

                        <table style="font-size:17px" align="center">
                            <tr>
                                <td><b>Charges</b></td>
                                <td align="center"><b>Cost (&#x20A6)</b></td>
                            </tr>
                            <tr style="color: black; height: 50px">
                                <td>Newspaper:</td>
                                <td align="right"><span id="priceId">@ViewBag.price</span></td>
                            </tr>
                            <tr style=" height: 50px">
                                <td>Service Charge:</td>
                                <td align="right"><span id="servicecharge"> 1000</span></td>
                            </tr>
                            <tr style="color:black; height:50px">
                                <td>Total Charge:</td>
                                <td align="right"><span id="total"></span></td>
                            </tr>

                        </table>


                        <center>
                            <div style="margin-top:0px">
                                <h3 style="margin-top: 10%; color: white; font-size: 15px; margin-left: 1%; ">Payment Options</h3>
                                <img style="  width: 50px; height: 28px" src="~/images/Vs.png" />
                                <img style=" width: 50px; height: 28px" src="~/images/mc.png" />
                                <img style=" width: 50px; height:28px" src="~/images/ver.png" />
                            </div>
                        </center>
                    </div>


                </div>
            </div>



            <script>

                $(document).ready(function () {
                    $("#amountPanel").show();
                    var price = $("#priceId").text();
                    $("#total").text(String(parseFloat(price) + parseInt($("#servicecharge").text())));
                });


                $(function () {
                    $("#oldsurname").keyup(function () {
                        $("#surname").text($(this).val());
                    });

                    $("#newSurname").keyup(function () {
                        $("#newsurname").text($(this).val());
                    });

                });

            </script>


